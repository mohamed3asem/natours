extends base
block content
    main.main
        .signup-form
            h2.heading-secondary.ma-bt-lg Sign up
            form.form.form--signup
                .form__group
                    label.form__label(for='name') Name
                    input#sigup-name.form__input(type='name', placeholder='your name', required)
                .form__group
                    label.form__label(for='email') Email address
                    input#signup-email.form__input(type='email', placeholder='you@example.com', required)
                .form__group.ma-bt-md
                    label.form__label(for='password') Password
                    input#password.form__input(type='password', placeholder='••••••••', required, minlength='8')
                .form__group.ma-bt-md
                    label.form__label(for='passwordConfirm') Password confirm
                    input#password-confirm.form__input(type='password', placeholder='••••••••', required, minlength='8')
                .form__group
                    button#signup-btn.btn.btn--green Sign up